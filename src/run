#!/bin/bash


DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
. $DIR/utils.sh


log_dir="$DIR/../env/logs/$1"
ips_path="$DIR/../env/ips.txt"
mkdir -p "$log_dir"
logs=''


counter=0
while read IP; do
    log_path="$log_dir/$counter.log"
    run $IP $@ &> "$log_path" &
    counter=$(($counter+1))
    logs="$logs $log_path"
done < <(cat "$ips_path")


echo "  ${bold}$counter operations running on the background."
echo "  You can safely cancel this at any time ${normal}"
echo 
echo

while true; do
    sleep 1
    current=$(ps -o ppid,pid,comm|grep "ssh\|scp"|wc -l)
    if [[ $current -eq 0 ]]; then
        echo "FINISHED"
        exit 0
    else
        echo -e "\e[1ARemmaining: $current "
    fi
    last=$current
done & 

tail -f $logs
exit 0
